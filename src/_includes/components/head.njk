<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>{{ seo.title or title }}  | {{ meta.siteName }}</title>

{# set image paths here so user/editor doesn't have to deal with full paths #}
{%- set ogImage -%}
{% if seo.image %}
  /assets/images/{{ seo.image }}
{% else %}
  {{ meta.siteImage }}
{% endif %}
{%- endset -%}

{#- General #}
<meta name="author" content="{{ author or meta.authorName }}"/>
<meta name="description" content="{{ description   }}"/>
{#<link rel="canonical" href="{{meta.siteURL}}"/>#}
{#- Open Graph #}
<meta property="og:site_name" content="{{ meta.title }}"/>
<meta property="og:title" content="{{ seo.title or title }} | {{ meta.siteName }}"/>
<meta property="og:description" content="{{ description or meta.siteDescription }}"/>
<meta property="og:url" content="{{meta.siteURL}}{{  page.url  }}"/>
<meta property="og:locale" content="{{ meta.locale }}"/>
{#{% if tags.includes("post") %}
#}<meta property="og:image" content="{{meta.siteURL}}assets/images/{{heroSettings.bg.image}}"/>

{#{% endif %}
#}
{#<meta property="og:image" content="{{ ogImage | url | absoluteUrl(build.url) }}" />
#}
{#- Twitter Card #}
<meta name="twitter:card" content="summary_large_image"/>
<meta name="twitter:site" content="{{ meta.siteName}}"/>
<meta name="twitter:creator" content="{{ meta.twitterCreator }}"/>
<meta name="twitter:title" content="{{ seo.title or title }}"/>
<meta name="twitter:description" content="{{ description or meta.siteDescription }}"/>
{#- Favicon #}
{#<link rel="apple-touch-icon" sizes="180x180" href="{{ '/assets/images/favicon/apple-touch-icon.png' | url }}">
#}<link rel="icon" type="image/svg+xml" href="/assets/UI/favicon.svg">
<link rel="icon" type="image/png" href="/assets/UI/favicon.png" sizes="32x32">

{#- RSS Feed #}
<link type="application/atom+xml" rel="alternate"  title="RSS Feed for {{ meta.siteName }}"  href="/rss" title="{{ meta.siteName }} XML Feed">


{% set css %}
{% include "src/assets/css/fonts.css" %}
{% endset %}
<style>
  {{css | minify('css') | safe}}
</style>


<link rel="stylesheet" href="/assets/css/{{hashes_css['main.css']}}"/>

{% if meta.env == 'production' %}
  <script  src="/assets/scripts/{{hashes_js['main.js']}}" defer></script>
{% else %}
  <script  src="/assets/scripts/main.js" defer></script>
{% endif %}