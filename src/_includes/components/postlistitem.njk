<li class="flex my-12">
	{% if postListItemStyle.complete %}
		<img onclick="window.location.href='{{post.url}}'"  loading="lazy" alt="{{post.data.hero.alt}}"
				src=" {{ '/assets/generatedImages/'+ post.data.hero.image if post.data.hero.image else '/assets/generatedImages/' + post.data.page.fileSlug + '.png' }}"
				>
	{% endif %}

	<div>

		{# Post Title  #}
		<H2 class="mb-1 leading-6 lg:mb-3 cta-heading">
			<a href="{{ post.url }}" class="block hover:underline">
				{{ post.data.title }}
			</a>
		</H2>
		{% if postListItemStyle.complete %}
			<time class="text-gray-700 lg:my-2 " datetime="{{ post.data.page.date | dateToFormat("yyyy-MM-dd") }}">
				{{ post.data.page.date | dateToFormat("dd LLLL yyyy") }}
			</time>
		{% endif %}

		{% if postListItemStyle.complete and(post.data.description or post.data.page.description) %}
			<span class="hidden mx-2 text-xl font-light text-gray-500 sm:inline " >~</span>

			<span class="label">
				{{ post.data.description |  removeMD}}
				{{ post.data.page.description | removeMD }}
			</span>
		{% endif %}
	</div>
</li>
{% if not loop.last and postListItemStyle.complete %}
	<hr class="hidden my-4 container-full lg:block">
{% endif %}