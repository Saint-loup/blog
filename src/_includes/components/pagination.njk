<div class="flex items-center justify-between px-4 py-3 border-t {{  colors.paginate.blockBg }}
{{  colors.paginate.blockBorder }} sm:px-6">
  <div class="flex justify-between flex-1 sm:hidden">
    <div>
      {% if pagination.href.previous %}
        <a href="{{ pagination.href.previous | url }}" class="relative inline-flex items-center px-4 py-2 text-sm font-medium leading-5 {{  colors.paginate.linkText }} transition duration-150 ease-in-out {{  colors.paginate.linkBg }} border {{  colors.paginate.linkBorder }} rounded-md hover:{{  colors.paginate.linkTextHover }} hover:{{  colors.paginate.linkBgHover }} focus:outline-none focus:shadow-outline-accent focus:{{  colors.paginate.linkFocusBorder }} active:bg-gray-100 active:{{  colors.paginate.linkText }}">
      Previous
    </a>
      {% endif %}
    </div>
    <div>
      {% if pagination.href.next %}
        <a href="{{ pagination.href.next | url }}" class="relative inline-flex items-center px-4 py-2 ml-3 text-sm font-medium leading-5 {{  colors.paginate.linkText }} transition duration-150 ease-in-out {{  colors.paginate.linkBg }} border {{  colors.paginate.linkBorder }} rounded-md hover:{{  colors.paginate.linkTextHover }} hover:{{  colors.paginate.linkBgHover }} focus:outline-none focus:shadow-outline-accent focus:{{  colors.paginate.linkFocusBorder }} active:bg-gray-100 active:{{  colors.paginate.linkText }}">
      Next
    </a>
      {% endif %}
    </div>

  </div>
  <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-{{ structure.g_alignPagination }}">
    <div>
      <nav class="relative z-0 inline-flex shadow-sm">
        {% if pagination.href.previous %}
          <a href="{{ pagination.href.previous | url }}" class="relative inline-flex items-center px-2 py-2 text-sm font-medium leading-5 {{  colors.paginate.linkText }} transition duration-150 ease-in-out {{  colors.paginate.linkBg }} border {{  colors.paginate.linkBorder }} rounded-l-md hover:{{  colors.paginate.linkTextHover }} hover:{{  colors.paginate.linkBgHover }} focus:z-10 focus:outline-none focus:{{  colors.paginate.linkFocusBorder }} focus:shadow-outline-accent active:bg-gray-100 active:text-gray-500" aria-label="Previous">
            <svg class="w-5 h-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
          </a>
        {% else %}
          <div class="relative inline-flex items-center px-2 py-2 text-sm font-medium leading-5 {{  colors.paginate.linkTextActive }} {{  colors.paginate.linkBgActive }} border {{  colors.paginate.linkBorder }} rounded-l-md" aria-label="Previous">
            <svg class="w-5 h-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
          </div>
        {%- endif %}
      {%- endfor %}

        {%- for pageEntry in pagination.pages %}
          {% if page.url != pagination.hrefs[loop.index0] %}
            <a href="{{ pagination.hrefs[ loop.index0 ] | url }}" class="relative inline-flex items-center px-4 py-2 -ml-px text-sm font-medium leading-5 {{  colors.paginate.linkText }} transition duration-150 ease-in-out {{  colors.paginate.linkBg }} border {{  colors.paginate.linkBorder }} hover:{{  colors.paginate.linkTextHover }} hover:{{  colors.paginate.linkBgHover }} focus:z-10 focus:outline-none focus:{{  colors.paginate.linkFocusBorder }} focus:shadow-outline-accent active:bg-gray-100 active:{{  colors.paginate.linkText }}">
              {{ loop.index }}
            </a>
          {% else %}
            <div class="relative inline-flex items-center px-4 py-2 -ml-px text-sm font-medium leading-5 {{  colors.paginate.linkTextActive }} {{  colors.paginate.linkBgActive }} border {{  colors.paginate.linkBorder }}">
              {{ loop.index }}
            </div>
          {%- endif %}
        {%- endfor %}

        <a href="{{ pagination.href.next | url }}" class="relative inline-flex items-center py-2 -ml-px text-sm font-medium leading-5 {{ colors.paginateCustom.linkText or colors.paginateDefault.linkText }} transition duration-150 ease-in-out {{ colors.paginateCustom.linkBg or colors.paginateDefault.linkBg }} border {{ colors.paginateCustom.linkBorder or colors.paginateDefault.linkBorder }} rounded-r-md hover:{{ colors.paginateCustom.linkTextHover or colors.paginateDefault.linkTextHover }} hover:{{ colors.paginateCustom.linkBgHover or colors.paginateDefault.linkBgHover }} focus:z-10 focus:outline-none focus:{{ colors.paginateCustom.linkFocusBorder or colors.paginateDefault.linkFocusBorder }} focus:shadow-outline-blue active:bg-gray-100 active:text-gray-500" aria-label="Suivant">
          <svg class="w-5 h-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
          </svg>
        </a>
      {% else %}
        <div class="relative inline-flex items-center py-2 -ml-px text-sm font-medium leading-5 {{ colors.paginateCustom.linkTextActive or colors.paginateDefault.linkTextActive }} {{ colors.paginateCustom.linkBgActive or colors.paginateDefault.linkBgActive }} border {{ colors.paginateCustom.linkBorder or colors.paginateDefault.linkBorder }} rounded-r-md" aria-label="Suivant">
          <svg class="w-5 h-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
          </svg>
        </div>

          <a href="{{ pagination.href.next | url }}" class="relative inline-flex items-center px-2 py-2 -ml-px text-sm font-medium leading-5 {{  colors.paginate.linkText }} transition duration-150 ease-in-out {{  colors.paginate.linkBg }} border {{  colors.paginate.linkBorder }} rounded-r-md hover:{{  colors.paginate.linkTextHover }} hover:{{  colors.paginate.linkBgHover }} focus:z-10 focus:outline-none focus:{{  colors.paginate.linkFocusBorder }} focus:shadow-outline-accent active:bg-gray-100 active:text-gray-500" aria-label="Next">
            <svg class="w-5 h-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
            </svg>
          </a>
        {% else %}
          <div class="relative inline-flex items-center px-2 py-2 -ml-px text-sm font-medium leading-5 {{  colors.paginate.linkTextActive }} {{  colors.paginate.linkBgActive }} border {{  colors.paginate.linkBorder }} rounded-r-md" aria-label="Next">
            <svg class="w-5 h-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
            </svg>
          </div>

    </nav>

  </div>
</div>